sudo apt-get install libusb-dev libusb-1.0-0 libusb-1.0-0-dev pkg-config sdcc

# STM8 should be supported
sdcc -v | grep stm8

git clone https://github.com/vdudouyt/stm8flash.git
cd stm8flash
make


